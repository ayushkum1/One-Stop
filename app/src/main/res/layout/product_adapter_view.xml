<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_view_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Home.Utils.ProductAdapter">

    <ImageView
        android:id="@+id/product_image_iv"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_tv"
        android:text="aaa"
        android:layout_marginLeft="135dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        style="@style/ProductTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/product_image_iv"/>

    <View
        android:id="@+id/name_line_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/product_image_iv"
        android:layout_marginLeft="135dp"
        style="@style/LineGrey"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"/>

    <TextView
        android:id="@+id/price_tv"
        android:text="aaa"
        android:layout_marginLeft="135dp"
        android:textColor="@color/black"
        style="@style/ProductTV"
        app:layout_constraintLeft_toRightOf="@+id/product_image_iv"
        app:layout_constraintTop_toBottomOf="@+id/name_line_bottom"/>

    <View
        android:id="@+id/price_line_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/product_image_iv"
        android:layout_marginLeft="135dp"
        style="@style/LineGrey"
        app:layout_constraintTop_toBottomOf="@+id/price_tv"/>

    <TextView
        android:id="@+id/product_description_tv"
        android:text="aaa"
        android:layout_marginLeft="135dp"
        android:textColor="@color/black"
        style="@style/ProductTV"
        android:lines="3"
        app:layout_constraintTop_toBottomOf="@id/price_line_bottom"
        app:layout_constraintLeft_toRightOf="@+id/product_image_iv"/>

    <View
        android:id="@+id/layout_line_bottom"
        style="@style/LineGrey"
        app:layout_constraintTop_toBottomOf="@id/product_image_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>