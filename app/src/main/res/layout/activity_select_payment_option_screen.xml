<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment.SelectPaymentOptionScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Payment.SelectPaymentOptionScreen">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Payment.SelectPaymentOptionScreen">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/back_ib"
                    style="@style/ToolBarButton"
                    android:src="@drawable/back_arrow"/>

                <TextView
                    android:id="@+id/title_tv"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/select_address_tv"
                android:text="Select Address"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"/>

            <Spinner
                android:id="@+id/address_type_spinner"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toRightOf="@+id/select_address_tv"/>

            <TextView
                android:id="@+id/name_tv"
                style="@style/AddressAdapterTV"
                android:text="@string/ayush"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select_address_tv"/>

            <TextView
                android:id="@+id/address_tv"
                style="@style/AddressAdapterTV"
                android:lines="3"
                android:layout_width="300dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_tv"/>

            <TextView
                android:id="@+id/phone_no_tv"
                style="@style/AddressAdapterTV"
                android:text="8217804700"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_tv"/>

            <View
                android:id="@+id/address_line_bottom"
                style="@style/LineGrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_no_tv"/>

            <View
                android:id="@+id/select_payment_line_top"
                style="@style/LineGrey"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_line_bottom"/>

            <TextView
                android:id="@+id/payment_option_tv"
                android:text="Select Payment Option"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select_payment_line_top"/>

            <View
                android:id="@+id/payment_line_top"
                style="@style/LineGrey"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payment_option_tv"/>

            <ImageButton
                android:id="@+id/gpay_ib"
                style="@style/PaymentIB"
                app:layout_constraintTop_toBottomOf="@+id/payment_line_top"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/gpay_tv"
                style="@style/PaymentTV"
                android:text="@string/google_pay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gpay_ib"/>

            <ImageButton
                android:id="@+id/phonepe_ib"
                style="@style/PaymentIB"
                app:layout_constraintTop_toBottomOf="@+id/payment_line_top"
                app:layout_constraintLeft_toRightOf="@+id/gpay_ib"
                app:layout_constraintRight_toLeftOf="@+id/bhim_ib"/>

            <TextView
                android:id="@+id/phonepe_tv"
                style="@style/PaymentTV"
                android:text="@string/phonepe"
                app:layout_constraintLeft_toRightOf="@+id/gpay_tv"
                app:layout_constraintRight_toLeftOf="@+id/bhim_tv"
                app:layout_constraintTop_toBottomOf="@+id/phonepe_ib"/>

            <ImageButton
                android:id="@+id/bhim_ib"
                style="@style/PaymentIB"
                app:layout_constraintTop_toBottomOf="@+id/payment_line_top"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/bhim_tv"
                style="@style/PaymentTV"
                android:text="@string/bhim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bhim_ib"/>

            <ImageButton
                android:id="@+id/card_payment_ib"
                style="@style/PaymentIB"
                app:layout_constraintTop_toBottomOf="@+id/gpay_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/card_payment_tv"
                style="@style/PaymentTV"
                android:textSize="10sp"
                android:text="@string/debit_credit_atm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_payment_ib"/>

            <ImageButton
                android:id="@+id/netbanking_ib"
                style="@style/PaymentIB"
                app:layout_constraintTop_toBottomOf="@+id/phonepe_tv"
                app:layout_constraintLeft_toRightOf="@+id/card_payment_ib"
                app:layout_constraintRight_toLeftOf="@+id/cod_ib"/>

            <TextView
                android:id="@+id/netbanking_tv"
                style="@style/PaymentTV"
                android:text="@string/net_banking"
                app:layout_constraintLeft_toRightOf="@+id/card_payment_tv"
                app:layout_constraintRight_toLeftOf="@+id/cod_tv"
                app:layout_constraintTop_toBottomOf="@+id/netbanking_ib"/>

            <ImageButton
                android:id="@+id/cod_ib"
                style="@style/PaymentIB"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/bhim_tv"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/cod_tv"
                style="@style/PaymentTV"
                android:text="@string/cod"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cod_ib"/>

            <View
                android:id="@+id/payment_line_bottom"
                style="@style/LineGrey"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/netbanking_tv"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/billing_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payment_line_bottom">

                <View
                    android:id="@+id/header_line_top"
                    style="@style/LineGrey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/billing_header_tv"
                    style="@style/CartBillHeadingTV"
                    android:text="@string/price_details"
                    app:layout_constraintTop_toBottomOf="@+id/header_line_top"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/header_line"
                    style="@style/ViewLine"
                    app:layout_constraintTop_toBottomOf="@+id/billing_header_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/total_product_price_tv"
                    style="@style/CartBillTV"
                    android:text="@string/price"
                    app:layout_constraintTop_toBottomOf="@+id/header_line"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/total_price_tv"
                    style="@style/CartBillTV"
                    android:text="Rs. 900"
                    app:layout_constraintBaseline_toBaselineOf="@+id/total_product_price_tv"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/delivery_tv"
                    style="@style/CartBillTV"
                    android:text="@string/delivery_fee"
                    app:layout_constraintTop_toBottomOf="@+id/total_product_price_tv"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/delivery_fee_tv"
                    style="@style/CartBillTV"
                    android:text="Rs.200"
                    app:layout_constraintBaseline_toBaselineOf="@+id/delivery_tv"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/delivery_line"
                    style="@style/ViewLine"
                    app:layout_constraintTop_toBottomOf="@+id/delivery_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/total_bill_amount_tv"
                    style="@style/CartBillTV"
                    android:text="@string/total_amount"
                    app:layout_constraintTop_toBottomOf="@+id/delivery_line"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/total_amount_tv"
                    style="@style/CartBillTV"
                    android:text="Rs. 1100"
                    app:layout_constraintBaseline_toBaselineOf="@+id/total_bill_amount_tv"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/billing_line_bottom"
                style="@style/LineGrey"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/billing_cl"/>

<!--this textview is dummy, just to create space-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billing_line_bottom"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/proceed_payment_btn"
        style="@style/CustomButton"
        android:text="@string/proceed_to_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>