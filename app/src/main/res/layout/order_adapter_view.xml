<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    tools:context=".Order.Utils.OrderAdapter">

    <View
        android:id="@+id/order_line_top"
        style="@style/LineGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/order_name_tv"/>

    <TextView
        android:id="@+id/order_name_tv"
        style="@style/MyOrderScreenSetting"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/order_line_top"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/order_weight_tv"
        style="@style/MyOrderScreenSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_name_tv"/>

    <TextView
        android:id="@+id/order_price_tv"
        style="@style/MyOrderScreenSetting"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_weight_tv"/>

    <ImageView
        android:id="@+id/status_circle"
        style="@style/MyOrderScreenSetting"
        android:layout_marginTop="5dp"
        android:src="@drawable/order_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_price_tv"/>


    <TextView
        android:id="@+id/order_status_tv"
        style="@style/MyOrderScreenSetting"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/status_circle"
        app:layout_constraintTop_toBottomOf="@+id/order_price_tv"/>

    <ImageView
        android:id="@+id/order_iv"
        style="@style/MyOrderScreenSetting"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_line_top"/>

    <View
        android:id="@+id/order_line_bottom"
        style="@style/LineGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>