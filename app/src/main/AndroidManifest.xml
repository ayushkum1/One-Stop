<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onestop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Order.OrderScreen"></activity>
        <activity android:name=".Cart.Utils.CartAdapter" />
        <activity android:name=".Cart.CartScreen" />
        <activity android:name=".Profile.VerifyScreen" />
        <activity android:name=".Profile.EditProfileScreen" />
        <activity android:name=".Profile.ProfileScreen" />
        <activity android:name=".SearchResultScreen" />
        <activity android:name=".Home.Utils.ProductAdapter" />
        <activity android:name=".SuccesssfulScreen" />
        <activity android:name=".Verification.MobileNoVerificationScreen" />
        <activity android:name=".Verification.EmailVerificationScreen" />
        <activity android:name=".SignUp.SignupScreen" />
        <activity android:name=".Home.HomeScreen" />
        <activity android:name=".Home.MainActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".Login.LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>